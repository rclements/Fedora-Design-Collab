%h1 Login
 
- form_for @user do |f|
    = f.error_messages
    = f.label :login
    = f.text_field :username
    = f.label :email
    = f.text_field :email
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = f.submit "Submit"

