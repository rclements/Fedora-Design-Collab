!!! Strict
%html
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }
    %meta{ :content => "application/xhtml+xml; charset=UTF-8", "http-equiv" => "content-type" }
    %title Fedora Design Collab
    %link{ :href => "/stylesheets/designhub-css-11032010.css", :rel => "stylesheet", :type => "text/css" }
    = javascript_include_tag "jquery"
  %body
    #wrapper
      #header
        %h1
          %a{ :href => '/'}
            %span
              Design-Hub
        = show_gravatar_for(current_user)
        %ul.utility-nav
          - if current_user
            Logged in as:
            = (current_user.username)
            %li= link_to "Edit Profile", edit_user_path(:current)
            %li= link_to "Logout", logout_path
          - else 
            %li= link_to "Register", new_user_path
            %li= link_to "Login", login_path
      - if flash[:error]
        .error= flash[:error]
      - if flash[:notice]
        .notice= flash[:notice]
      #content
        = yield
