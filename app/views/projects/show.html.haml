Projects:
%br
%ul
  = link_to "My Projects", root_path
  %br
  = link_to "List All Projects", projects_path
= render :partial => "projects/details", :locals => { :project => @project }
%br
    
  %h3 Proposals
  = link_to 'Create New Proposal', new_proposal_path(:project_id => @project.id)
  %br
  %br
  = link_to "Newest Proposals", proposals_path(:sort_by => "newest")
  = link_to "Oldest Proposals", proposals_path(:sort_by => "oldest")
  - @project.proposals.each do |proposal|
    = render :partial => "proposals/proposal", :locals => { :proposal => proposal }
    %br
  = link_to 'Create New Proposal', new_proposal_path(:project_id => @project.id)
